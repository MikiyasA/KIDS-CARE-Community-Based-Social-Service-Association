{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Next.js Debug",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "sourceMaps": true,
      "env": {
        "NODE_ENV": "development"
      },
      "preLaunchTask": "fnm setup", // Link to the task running the PowerShell script
      "program": "${workspaceFolder}\\adding-hearts-main\\src\\pages\\api\\news.js"
    }
  ]
}
